{
  "manifest_version": 2,

  "name": "BoxScan - Codeword Replacement System",
  "description": "A lightweight app for replacing codewords with user-defined meanings.",
  "version": "1.1",

  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}